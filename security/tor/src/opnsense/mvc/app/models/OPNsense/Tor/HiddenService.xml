<model>
  <mount>//OPNsense/tor/hiddenservice</mount>
  <description>Tor Onion service configuration</description>
  <version>1.0.1</version>
  <items>
    <service type="ArrayField">
      <enabled type="BooleanField">
        <default>1</default>
        <Required>Y</Required>
      </enabled>
      <name type="TextField">
        <Required>Y</Required>
        <mask>/^[a-z0-9_-]+$/i</mask>
        <ValidationMessage>The name should only consist of alphanumeric characters, dashes and underscores.</ValidationMessage>
      </name>
      <clients type="ModelRelationField">
        <Model>
          <template>
            <source>OPNsense.Tor.AuthorizedClients</source>
              <items>client</items>
              <display>name</display>
          </template>
        </Model>
        <Multiple>Y</Multiple>
        <Required>N</Required>
        <ValidationMessage></ValidationMessage>
      </clients>
    </service>
  </items>
</model>
